{
  "name": "aloe-ii",
  "version": "0.0.1",
  "repository": "git+https://github.com/aloelabs/aloe-ii.git",
  "author": "Aloe Labs, Inc.",
  "license": "(AGPL-3.0 OR MIT OR BSD-3-Clause)",
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "pre-commit": {
    "run": ["lint"]
  },
  "scripts": {
    "lint": "yarn prettier && yarn solhint",
    "lint:check": "yarn prettier:check && yarn solhint:check",
    "prettier": "yarn prettier:check --write",
    "prettier:check": "prettier --check core/src/**/*.sol periphery/src/**/*.sol",
    "solhint": "yarn solhint:check --fix",
    "solhint:check": "solhint --config ./.solhint.json core/src/**/*.sol periphery/src/**/*.sol"
  }
}
